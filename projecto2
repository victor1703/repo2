document.addEventListener('DOMContentLoaded', function() {

    function updateName(selector, newName) {
        let nameElement = document.querySelector(selector);
        if(nameElement) {
            nameElement.textContent = newName;
        }
    }

    function updateReview(selector, reviewHTML) {
        let reviewElement = document.querySelector(selector);
        if(reviewElement) {
            reviewElement.innerHTML = reviewHTML;
        }
    }

    // Cambios para "JOHN PAUL"
    updateName('.el-563036 .headline-inner h3 strong', "Lucía Fernández");
    updateReview('.el-618415 .paragraph-inner', `
        <p><strong>Valoración:</strong>&nbsp;⭐️⭐️⭐️⭐️⭐️</p>
        <p><em>"Desde que utilicé este producto, mi vida cambió para mejor. Es realmente sorprendente y lo recomendaría a cualquiera."</em></p>
    `);

    // Cambios para "STEVE McDONALD"
    updateName('.el-113953 .headline-inner h3', "ESTEBAN MENDEZ");
    updateReview('.el-295691 .paragraph-inner', `
        <p><strong>Valoración:</strong>&nbsp;⭐️⭐️⭐️⭐️⭐️</p>
        <p><em>"Este producto es fantástico. Desde que comencé a usarlo, he notado grandes mejoras. ¡Totalmente recomendado!"</em></p>
    `);

    // Cambios para "CHRIS JAMES"
    updateName('.el-228801 .headline-inner h3', "CRISTIAN JIMÉNEZ");
    updateReview('.el-161293 .paragraph-inner', `
        <p><strong>Valoración:</strong>&nbsp;⭐️⭐️⭐️⭐️⭐️</p>

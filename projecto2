});


document.addEventListener('DOMContentLoaded', function() {
    let faqElement = document.querySelector('.el-166895 .headline-inner h3');
    if(faqElement) {
        faqElement.textContent = "PREGUNTAS FRECUENTES";
    }
});


document.addEventListener('DOMContentLoaded', function() {
    const updateContent = (elementClasses, contentList, isQuestion = true) => {
        for (let i = 0; i < elementClasses.length; i++) {
            let targetElement = document.querySelector(`${elementClasses[i]} .paragraph-inner p:nth-child(1)`);

            if (isQuestion) {
                let secondElement = document.querySelector(`${elementClasses[i]} .paragraph-inner p:nth-child(2)`);
                secondElement.remove();
            }

            targetElement.textContent = contentList[i];
        }
    }

    // Lista de clases de los elementos a modificar para las preguntas
    const questionElementClasses = ['.el-78732', '.el-67252', '.el-35187', '.el-75018', '.el-44794', '.el-85034'];
    const newQuestions = [
        "¿Cómo puedo contactar al servicio al cliente?",
        "¿Dónde puedo encontrar más información sobre el producto?",
        "¿Cuál es el tiempo de envío estimado para los pedidos?",
        "¿Tienen una política de devoluciones?",
        "¿Puedo modificar mi pedido después de haberlo realizado?",
        "¿Ofrecen descuentos para compras en grandes cantidades?"
    ];

    // Actualizar preguntas
    updateContent(questionElementClasses, newQuestions);

    // Lista de clases de los elementos a modificar para las respuestas
    const answerElementClasses = ['.el-3356', '.el-63217', '.el-84140', '.el-86134', '.el-7310', '.el-88840'];
    const answers = [
        "Puedes contactar al servicio al cliente a través de nuestra sección de Contacto o llamando al número que aparece en la parte inferior del sitio.",
        "Aquí puedes encontrar toda la información sobre el producto en la sección de especificaciones y detalles.",
        "El tiempo de envío estimado para los pedidos es de 3 a 5 días laborables.",
        "Sí, ofrecemos una política de devoluciones de 30 días a partir de la fecha de compra.",
        "Puedes modificar tu pedido en las primeras 24 horas después de haberlo realizado. Después de ese tiempo, no se garantizan cambios.",
        "Ofrecemos descuentos para compras en grandes cantidades. Para obtener más detalles, contacta con nuestro equipo de ventas."
    ];

    // Actualizar respuestas
    updateContent(answerElementClasses, answers, false);
});


</script>
